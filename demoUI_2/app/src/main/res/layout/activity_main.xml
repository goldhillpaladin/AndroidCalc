<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Child"
        android:id="@+id/btnOpenPage1"
        android:onClick="BtnOpenPage1_Click"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button 2"
        android:id="@+id/btn2"
        android:layout_below="@+id/btnOpenPage1"
        android:layout_alignLeft="@+id/btnOpenPage1"
        android:layout_alignStart="@+id/btnOpenPage1"
        android:layout_marginTop="78dp"
        android:onClick="Btn2_Click"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/btnCalc"
        android:layout_above="@+id/btnOpenPage1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:onClick="BtnCalc_Click" />

</RelativeLayout>