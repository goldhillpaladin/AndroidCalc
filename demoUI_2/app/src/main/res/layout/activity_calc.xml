<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sothink.demoui.CalcActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:columnCount="4"
        android:rowCount="5"
        android:id="@+id/gridLayout1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/button7"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="ClickBtn7"
            android:layout_margin="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/button8"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="ClickBtn8"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/button9"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="ClickBtn9"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/buttonAdd"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="ClickBtnAdd"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="ClickBtn4"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="ClickBtn5"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="ClickBtn6"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/buttonSub"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:onClick="ClickBtnSub" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="ClickBtn1"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="ClickBtn2"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="ClickBtn3"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/buttonMulti"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:onClick="ClickBtnMulti" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button0"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="ClickBtn0"
            android:layout_margin="0dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/buttonPoint"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="ClickBtnPoint"
            android:layout_margin="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/buttonEqual"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:onClick="ClickBtnEqual"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/buttonDivide"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:onClick="ClickBtnDivide" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†"
            android:id="@+id/buttonBackspace"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="ClickBtnBackspace" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:id="@+id/buttonAc"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="ClickBtnAc" />
    </GridLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textViewResult"
        android:layout_marginTop="71dp"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="right" />
</RelativeLayout>
